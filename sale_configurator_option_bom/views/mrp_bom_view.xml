<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_bom_line_form" model="ir.ui.view">
        <field name="model">mrp.bom.line</field>
        <field name="inherit_id" ref="mrp.mrp_bom_line_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="related_option" title="Ref option" />
            </xpath>
        </field>
    </record>

    <record id="view_bom_form" model="ir.ui.view">
        <field name="model">mrp.bom</field>
        <field name="inherit_id" ref="mrp.mrp_bom_form_view" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='bom_line_ids']//field[@name='product_id']"
                position="after"
            >
                <field name="related_option" />
            </xpath>
        </field>
    </record>

</odoo>
