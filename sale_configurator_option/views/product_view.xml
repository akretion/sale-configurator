<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="product_template_form_view">
        <field name="name">product.template.option.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='sales']" position="after">
                <page
                    name="config_options"
                    string="Configurator Options"
                    
                >
                    <group name="options">
                        <group name="setting">
                            <field name="is_configurable_opt"
                                attrs="{'invisible': [('is_option','=', True)]}"/>
                            <field name="is_option"
                                attrs="{'invisible': [('is_configurable_opt','=', True)]}"/>
                        </group>
                        <group string="Options" attrs="{'invisible': [('is_configurable_opt','=',False)]}">
                            <field
                                name="configurable_option_ids"
                                nolabel="1"
                                mode="tree"
                            >
                                <tree string="Configurator Option" editable="bottom">
                                    <field name="product_id" />
                                    <field name="product_uom_id" />
                                    <field name="sequence" invisible="1" />
                                    <field name="opt_min_qty" />
                                    <field name="opt_default_qty" />
                                    <field name="opt_max_qty" />
                                    <field name="option_qty_type" />
                                </tree>
                            </field>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
