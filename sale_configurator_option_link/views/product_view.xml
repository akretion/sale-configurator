<odoo>
    <record model="ir.ui.view" id="product_template_form_view">
        <field name="name">product.template.option.link.form</field>
        <field name="model">product.template</field>
        <field
            name="inherit_id"
            ref="sale_configurator_option.product_template_form_view"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='config_options']//field[@name='option_qty_type']"
                position="after"
            >
                <field name="included_by_product_id" />
                <field name="included_by_option_id" invisible="1" />
            </xpath>
        </field>
    </record>
</odoo>
