<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='order_details']" position="inside">
                <field name="has_option_message" invisible="1" />
            </xpath>
            <xpath
                expr="//field[@name='order_line']//tree/field[@name='name']"
                position="after"
            >
                <field
                    name="option_message"
                    attrs="{'column_invisible': [('parent.has_option_message', '=', False)]}"
                />
            </xpath>
        </field>
    </record>
    <record id="sale_order_line_config_option_view_form" model="ir.ui.view">
        <field name="model">sale.order.line</field>
        <field
            name="inherit_id"
            ref="sale_configurator_option.sale_order_line_config_option_view_form"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='option_ids']/tree/field[@name='option_message']"
                position="before"
            >
                <field name="has_option_message" invisible="1" />
            </xpath>
            <xpath
                expr="//field[@name='option_ids']/tree/field[@name='option_message']"
                position="attributes"
            >
                <attribute
                    name="attrs"
                >{'readonly': [('has_option_message', '=', False)]}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
