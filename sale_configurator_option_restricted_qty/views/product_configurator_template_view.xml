<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="product_configurator_template_form_view" model="ir.ui.view">
        <field name="name">product.configurator.template.qty.form</field>
        <field name="model">product.configurator.template</field>
        <field name="inherit_id" ref="sale_configurator_option.product_configurator_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='configurable_option_ids']/tree/field[@name='sale_default_qty']" position="after">
                <field name="sale_min_qty" />
                <field name="sale_max_qty" />
            </xpath>
        </field>
    </record>
</odoo>
