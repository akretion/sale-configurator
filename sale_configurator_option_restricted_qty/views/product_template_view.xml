<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="product_template_form_view">
        <field name="name">product.template.option.qty.form</field>
        <field name="model">product.template</field>
        <field
            name="inherit_id"
            ref="sale_configurator_option.product_template_form_view"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='local_configurable_option_ids']/tree/field[@name='sale_default_qty']"
                position="after"
            >
                <field name="sale_min_qty" />
                <field name="sale_max_qty" />
            </xpath>
            <xpath
                expr="//field[@name='configurable_option_ids']/tree/field[@name='sale_default_qty']"
                position="after"
            >
                <field name="sale_min_qty" />
                <field name="sale_max_qty" />
            </xpath>
        </field>
    </record>
</odoo>
